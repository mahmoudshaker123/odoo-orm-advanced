<odoo>
    <record id="view_task_tree" model="ir.ui.view">
        <field name="name">orm.task.tree</field>
        <field name="model">orm.task</field>
        <field name="arch" type="xml">
            <list>
                <field name="title"/>
                <field name="priority"/>
                <field name="is_done"/>
                <field name="days_count"/>
            </list>
        </field>
    </record>

    <record id="view_task_form" model="ir.ui.view">
        <field name="name">orm.task.form</field>
        <field name="model">orm.task</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="print_name" string="Print Orm " type="object"/>
                    <button
                        name="%(action_task_report_wizard)d"
                        type="action"
                        string="Task Report"
                        class="btn-secondary"
                    />

                 </header>
                <sheet>
                    <group>
                        <!-- Title -->
                        <div class="oe_title">
                            <h1>
                                <field name="title" placeholder="Task Title" nolabel="1"/>
                            </h1>
                            <h2>
                                <field name="user_id" nolabel="1"/>
                            </h2>
                        </div>

                        <field name="category_id"/>
                        <field name="priority"/>
                        <field name="is_done"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="days_count" readonly="1"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>
    <record id="action_orm_tasks" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">orm.task</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem
        id="menu_orm_tasks"
        name="Tasks"
        parent="menu_orm_root"
        action="action_orm_tasks"
        sequence="10"

    />
</odoo>
